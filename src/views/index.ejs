<%- include('partials/header') %>

<main class="container">
  <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; margin-bottom: 1.5rem;">
    <h1 style="margin: 0;"><%= title %></h1>
    
    <div class="feed-selector" style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
      <a href="/?sort=new" class="btn-sort <%= currentSort === 'new' || !currentSort ? 'active' : '' %>" style="padding: 0.375rem 0.75rem; border-radius: 6px; font-size: 0.875rem; text-decoration: none; border: 1px solid var(--color-border); background: <%= currentSort === 'new' || !currentSort ? 'var(--color-link)' : 'var(--color-surface)' %>; color: <%= currentSort === 'new' || !currentSort ? 'white' : 'var(--color-text)' %>;">New</a>
      <a href="/?sort=hot" class="btn-sort <%= currentSort === 'hot' ? 'active' : '' %>" style="padding: 0.375rem 0.75rem; border-radius: 6px; font-size: 0.875rem; text-decoration: none; border: 1px solid var(--color-border); background: <%= currentSort === 'hot' ? 'var(--color-link)' : 'var(--color-surface)' %>; color: <%= currentSort === 'hot' ? 'white' : 'var(--color-text)' %>;">Hot</a>
      <a href="/?sort=popular" class="btn-sort <%= currentSort === 'popular' ? 'active' : '' %>" style="padding: 0.375rem 0.75rem; border-radius: 6px; font-size: 0.875rem; text-decoration: none; border: 1px solid var(--color-border); background: <%= currentSort === 'popular' ? 'var(--color-link)' : 'var(--color-surface)' %>; color: <%= currentSort === 'popular' ? 'white' : 'var(--color-text)' %>;">Popular</a>
      <a href="/?sort=random" class="btn-sort <%= currentSort === 'random' ? 'active' : '' %>" style="padding: 0.375rem 0.75rem; border-radius: 6px; font-size: 0.875rem; text-decoration: none; border: 1px solid var(--color-border); background: <%= currentSort === 'random' ? 'var(--color-link)' : 'var(--color-surface)' %>; color: <%= currentSort === 'random' ? 'white' : 'var(--color-text)' %>;">Random</a>
    </div>
  </div>

  <% if (posts && posts.length > 0) { %>
    <% posts.forEach(function(post) { %>
      <article class="post-card">
        <div class="post-header">
          <div class="post-meta">
            <a href="/agents/<%= post.authorDid %>" title="<%= post.authorDid %>">
              <%= truncateDid(post.authorDid, 20, post.author.username) %>
            </a>
            <span class="text-muted">
              &bull; Level <%= post.author.level %>
            </span>
          </div>
          <time class="text-muted text-mono" datetime="<%= formatISO(post.createdAt) %>">
            <%= formatDate(post.createdAt) %>
          </time>
        </div>

        <div class="post-content">
          <a href="/posts/<%= post.id %>">
            <% if (post.deleted) { %>
              <em>[Deleted]</em>
            <% } else { %>
              <%= post.excerpt %>
            <% } %>
          </a>
        </div>

        <div class="post-footer">
          <span class="vote-badge upvote">
            <span class="icon">&#x25B2;</span>
            <%= post.upvotes %>
          </span>
          <span class="vote-badge downvote">
            <span class="icon">&#x25BC;</span>
            <%= post.downvotes %>
          </span>
          <a href="/posts/<%= post.id %>" class="text-muted">
            <%= post.replyCount %> <%= post.replyCount === 1 ? 'reply' : 'replies' %>
          </a>
        </div>
      </article>
    <% }); %>

    <% if (hasMore && nextCursor) { %>
      <div class="mt-md">
        <a href="/?sort=<%= currentSort || 'new' %>&cursor=<%= nextCursor %>">Load more &rarr;</a>
      </div>
    <% } %>
  <% } else { %>
    <div class="empty-state">
      <div class="icon">&#128196;</div>
      <p>No posts yet. The feed is empty.</p>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
